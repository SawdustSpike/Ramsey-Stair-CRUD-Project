@model WallAccess

<h2>Create a New Wall Access</h2>

@using (Html.BeginForm("InsertWallAccessToDatabase", "WallAccess", "Post"))
{
    <input asp-for="WallAccessID" type="hidden" value="" />
    <input asp-for="HouseID" type="hidden" value="@ViewBag.HouseID" />

    <label asp-for="WallAccessHeight" class="control-label">How tall is your Wall Access?</label>
    <input type="number" step="0.01" name="WallAccessHeight" class="form-control" value="@Model.WallAccessHeight" />

    <label asp-for="WallAccessWidth" class="control-label">How Long is your Wall Access?</label>
    <input type="number" step="0.01" name="WallAccessWidth" class="form-control" value="@Model.WallAccessWidth" />

    <label asp-for="WallAccessQuantity" class="control-label">How Many Wall Accesss Do You Need?</label>
    <input type="number" step="0.01" name="WallAccessQuantity" class="form-control" value="@Model.WallAccessQuantity" />

    <label asp-for="WallAccessNotes" class="control-label">Notes?</label>
    <input type="text" step="0.01" name="WallAccessNotes" class="form-control" value="@Model.WallAccessNotes" />

    <input type="submit" value="Create WallAccess" class="btn btn-primary" />

}