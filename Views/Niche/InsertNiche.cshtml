@model Niche

<h2>Create a New Niche</h2>

@using (Html.BeginForm("InsertNicheToDatabase", "Niche", "Post"))
{
    <input asp-for="NicheID" type="hidden" value="" />
    <input asp-for="HouseID" type="hidden" value="@ViewBag.HouseID" />

    <label asp-for="NicheHeight" class="control-label">How tall is your Niche?</label>
    <input type="text" step="0.01" name="NicheHeight" class="form-control" value="@Model.NicheHeight" />

    <label asp-for="NicheWidth" class="control-label">How Long is your Niche?</label>
    <input type="text" step="0.01" name="NicheWidth" class="form-control" value="@Model.NicheWidth" />

    <label asp-for="NicheQuantity" class="control-label">How Many Do You Need?</label>
    <input type="number" step="0.01" name="NicheQuantity" class="form-control" value="@Model.NicheQuantity" />

    <input type="submit" value="Create Niche" class="btn btn-primary" />

}