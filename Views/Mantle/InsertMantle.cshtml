@model Mantle

<h2>Create a New Mantle</h2>

@using (Html.BeginForm("InsertMantleToDatabase", "Mantle", "Post"))
{
    <input asp-for="MantleID" type="hidden" value="" />
    <input asp-for="HouseID" type="hidden" value="@ViewBag.HouseID" />
     
    <label asp-for="MantleType" class="control-label">What Style Mantle do you need?</label>
    <input type="text" step="0.01" name="MantleType" class="form-control" value="@Model.MantleType" />

    <label asp-for="MantleNotes" class="control-label">Notes for this Mantle</label>
    <input type="text" step="0.01" name="MantleNotes" class="form-control" value="@Model.MantleNotes" />
    
    <label asp-for="MantleQuantity" class="control-label">How Many Do You Need?</label>
    <input type="number" step="0.01" name="MantleQuantity" class="form-control" value="@Model.MantleQuantity" />

    <input type="submit" value="Create Mantle" class="btn btn-primary" />

}